{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    {{ include('misc/menu.html.twig') }}
    <h1>Clients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Cui</th>
                <td>{{ client.cui }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ client.city }}</td>
            </tr>
            <tr>
                <th>Ins_date</th>
                <td>{{ client.insDate ? client.insDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ins_uid</th>
                <td>{{ client.insUid }}</td>
            </tr>
            <tr>
                <th>Mod_date</th>
                <td>{{ client.modDate ? client.modDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mod_uid</th>
                <td>{{ client.modUid }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_clients_crud_index') }}">back to list</a>

    <a href="{{ path('app_clients_crud_edit', {'id': client.id}) }}">edit</a>

    {{ include('clients_crud/_delete_form.html.twig') }}
{% endblock %}
