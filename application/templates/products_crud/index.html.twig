{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
    {{ include('misc/menu.html.twig') }}
    <h1>Products index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a href="{{ path('app_products_crud_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_products_crud_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_products_crud_new') }}">Create new</a>
{% endblock %}
